{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
